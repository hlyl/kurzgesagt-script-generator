# Provider selection
# Options: anthropic | openai
SCENE_PARSER_PROVIDER=anthropic

# Anthropic API (required if using anthropic provider)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Application Settings
APP_NAME=Kurzgesagt Script Generator
APP_VERSION=0.1.0
DEBUG=false

# Paths
PROJECTS_DIR=./projects
TEMPLATES_DIR=./templates
EXPORTS_DIR=./exports

# API Settings
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=4000
ANTHROPIC_TIMEOUT=60

# OpenAI API (required if using openai provider)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4000
OPENAI_TIMEOUT=60

# Gemini Image API (required for image generation)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_IMAGE_MODEL=gemini-2.5-flash-image
GEMINI_IMAGE_MODEL_ALT=gemini-3-pro-image-preview
GEMINI_IMAGE_ASPECT_RATIO=1:1
GEMINI_IMAGE_RESOLUTION=1K

# Google Drive Settings (optional - for automatic video uploads)
GOOGLE_DRIVE_ENABLED=false
GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id_here
GOOGLE_DRIVE_CREDENTIALS_PATH=./credentials.json
GOOGLE_DRIVE_TOKEN_PATH=token.json
GOOGLE_DRIVE_KEEP_LOCAL_COPY=false

# Streamlit Settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
